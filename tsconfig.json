{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "../components/*": ["./src/components/*"],
      "@colors": ["./src/shared/colors.ts"],
      "@screens/*": ["./src/screens/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
